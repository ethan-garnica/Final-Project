                        <label class="radio-inline"><input type = "radio" name="game" value=<%=gameId[i]%>> <%=nameList[i]%> <img src = "<%=imageNameList[i]%>" width="100"></label>
                      
                        
                        
                   
                    </div>
                    
                <%}%>
                   
                
                  
                
            
        </div>
